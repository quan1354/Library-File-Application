<UserControl x:Class="ModuleControl.Views.BottomView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModuleControl.Views"
             xmlns:prism ="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <Grid  Background="DarkCyan">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="White" BorderThickness="0 2">
            <TextBlock VerticalAlignment="Center" Foreground="White" HorizontalAlignment="Center" FontWeight="SemiBold" FontSize="15" Padding="3">Lot 327, Kampung Wellesley, 14200 Sungai Bakap, Jawi Seberang Perai Selatan, Jawi, Penang, Malaysia</TextBlock>
        </Border>

        <Border Grid.Row="1" BorderBrush="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderBrush="White"  BorderThickness="0 0 2 0" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave" >
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Center" FontWeight="Bold"  FontSize="14" >
                             <Hyperlink  Foreground="White" NavigateUri="https://www.facebook.com" RequestNavigate="Hyperlink_RequestNavigate">
                                Facebook
                            </Hyperlink>
                        </TextBlock>
                        <TextBlock Foreground="White" FontWeight="SemiBold"  FontSize="14" TextWrapping="Wrap">
                            https://www.facebook.com/DhammaJata?mibextid=ZbWKwL
                        </TextBlock>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" BorderBrush="White" BorderThickness="0 0 2 0" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave">
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Center" FontWeight="Bold"  FontSize="14" >
                             <Hyperlink Foreground="White" NavigateUri="https://www.youtube.com" RequestNavigate="Hyperlink_RequestNavigate" >
                                YouTube
                            </Hyperlink>
                        </TextBlock>
                        <TextBlock Foreground="White" HorizontalAlignment="Center" FontWeight="SemiBold"  FontSize="14" Grid.Column="1" TextWrapping="Wrap">https://www.youtube.com/@dhammajataaranya435</TextBlock>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" BorderBrush="White" BorderThickness="0 0 2 0" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave">
                    <StackPanel>
                        <TextBlock Foreground="White" HorizontalAlignment="Center" FontWeight="Bold"  FontSize="14" Grid.Column="1"  TextDecorations="Underline">Email</TextBlock>
                        <TextBlock Foreground="White" HorizontalAlignment="Center" FontWeight="SemiBold"  FontSize="14" Grid.Column="1">dhammajata@gmail.com</TextBlock>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" BorderBrush="White" BorderThickness="0 0 2 0" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave">
                    <StackPanel>
                        <TextBlock Foreground="White" HorizontalAlignment="Center" FontWeight="Bold"  FontSize="14" Grid.Column="1"  TextDecorations="Underline">WhatsApp</TextBlock>
                        <TextBlock Foreground="White" HorizontalAlignment="Center" FontWeight="SemiBold"  FontSize="14" Grid.Column="1">012-470 7637</TextBlock>
                    </StackPanel>
                </Border>

                <Border Grid.Column="4" BorderBrush="White" BorderThickness="0 0 2 0" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave">
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Center" FontWeight="Bold"  FontSize="14" >
                             <Hyperlink  Foreground="White" NavigateUri="https://greatech-group.com/en/" RequestNavigate="Hyperlink_RequestNavigate" TextDecorations="Underline">
                                Website
                            </Hyperlink>
                        </TextBlock>
                        <TextBlock Foreground="White" HorizontalAlignment="Center" FontWeight="SemiBold"  FontSize="14" Grid.Column="1">https://new.dhammajata.org/</TextBlock>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>

</UserControl>
